<%# navigation links for authenticated users %>
<% if user_signed_in? %>
<ul class="nav navbar-nav navbar-right">
  <li><%= active_link_to 'Articles', :class_active => 'active', :wrap_tag => :li %></li>
  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
    <ul class="dropdown-menu">
      <li><%= link_to "My Account", current_user %></li>
      <li><%= link_to "Edit Account", edit_user_registration_path %></li>
      <li><%= link_to "File Center" %></li>
      <% if current_user.try(:admin?) %>
      <li><%= link_to "Manage Users", users_path %></li>
      <li><%= link_to "Manage Accounts", accounts_path %></li>
      <% end %>
      <li role="separator" class="divider"></li>
      <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
    </ul>
  </li>
</ul>
  <% else %>
    <%= link_to 'login', new_user_session_path, class: "btn-ghost pull-right" %>
  <% end %>




<div class="container">
  <div class="row">
    <h3>Comments <small>(<%= Comment.count %>)</small></h3>
      <table class="table">
        <thead>
          <th>Comment</th>
          <th>User</th>
          <th>Item</th>
          <th>Date</th>
          <th>Action</th>
        </thead>
        <tbody>
          <% @comments.each do |comment| %>
            <tr>
                 <td><%= comment.title %></td>
                 <td><%= link_to comment.user.name, comment.user %></td>
                 <td><%= comment.commentable_type %></td>
                 <td><%= time_ago_in_words(comment.created_at) %> ago</td>
                 <td><%= link_to "delete", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
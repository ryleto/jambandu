<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#myModal">
  Add Comment
</button>

<!-- Comment Form Modal -->
<section class="comment_form">
    <%= render :partial => 'comments/form', :locals => {:commentable => commentable_object} %>
</section>

<% if commentable_object.comments.any? %>
  <h3>Comments (<%= commentable_object.comments.count %>)</h3>
  <ul class="comments">
    <% commentable_object.comments.each do |comment| %>
      <li id="comment-<%= comment.id %>">
        <span class="user"><%= link_to comment.user.name, comment.user %></span>
        <span class="content">
          <%= comment.title %>
        </span>
        <span class="timestamp">
          Posted <%= time_ago_in_words(comment.created_at) %> ago.
          <%= link_to "delete", comment, method: :delete, data: { confirm: "Are you sure you want to delete this comment?" } %>
        </span>
      </li>
    <% end %>
  </ul>
<% end %>
<div class="container">
  <h3>User</h3>
  <table>
  <tr><td><b>Name:</b></td><td><%= @user.name if @user.name %></td></tr>
  <tr><td><b>Email:</b></td><td><%= mail_to @user.email if @user.email %></td></tr>
  <tr><td><b>Company:</b></td><td><%= link_to @user.company.try(:company_name), @user.company || 'N/A' %></td></tr>
  <tr><td><b>Logins:</b></td><td><%= @user.sign_in_count %></td></tr>
  <tr><td><b>Last Activity:</b></td><td><small><i><%= @user.last_sign_in_at || "N/A" %></i></small></td>
  <br></tr>
  </table><br>
  
  <!-- Comment Module -->
  <%= render :partial => 'comments/comments', :locals => {:commentable_object => @user} %>
  
  <br><br>   
  <div class="btn-group btn-group-xs" role="toolbar" aria-label="...">
  <% if current_user.email? %>
    <%= link_to "edit", edit_user_path(@user), class:"btn btn-default" %>
    <%= link_to("delete", @user, :data => { :confirm => "Are you sure you want to delete this user?" }, :method => :delete, :class => 'btn btn-default') unless @user == current_user %>
  <% end %>
  </div>
</div>
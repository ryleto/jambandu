<nav class="navbar navbar-inverse navbar-fixed-top">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to 'Jambandu', root_path, id:"logo" %>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <%# primary navbar links for unauthenticated users %>
        <li><%= active_link_to 'About', about_path, :class_active => 'active', :wrap_tag => :li %></li>
        <li><%= active_link_to 'Contact', contact_path, :class_active => 'active', :wrap_tag => :li %></li>
      </ul>
        <%# navigation links for authenticated users %>
        <% if user_signed_in? %>
        <ul class="nav navbar-nav navbar-right">
          <% if current_user.try(:admin?) || current_user.try(:editor?) %>
            <li><%= active_link_to 'Articles', articles_path, :class_active => 'active', :wrap_tag => :li %></li>
            <li><%= active_link_to 'Companies', companies_path, :class_active => 'active', :wrap_tag => :li %></li>
          <% end %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= current_user.name %> <span class="caret"></span></a>
            <ul class="dropdown-menu">
              <li><%= link_to "My Account", current_user %></li>
              <li><%= link_to "Edit Account", edit_user_path(current_user) %></li>
              <% if current_user.try(:admin?) %>
              <li><%= link_to "Manage Users", users_path %></li>
              <% end %>
              <li role="separator" class="divider"></li>
              <li><%= link_to "Sign out", destroy_user_session_path, :method => :delete %></li>
            </ul>
          </li>
        </ul>
        <% else %>
          <%= link_to 'login', new_user_session_path, class: "btn-ghost pull-right" %>
        <% end %>
    </div>
  </div>
</nav>


